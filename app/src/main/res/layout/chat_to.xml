<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"


    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/chatto_msg"

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toLeftOf="@+id/chatfrom_imageview"

        android:padding="8dp"

        android:text="This is a sample message from alex to mario"
        android:textColor="@android:color/white"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/chatto_imageview"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatto_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"



        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>


</androidx.constraintlayout.widget.ConstraintLayout>